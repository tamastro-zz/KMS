<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>EDIT
      <%= editUser.username.toUpperCase() %>
    </title>
    <%- include layout/materialize %>
  </head>

  <body>
    <%- include layout/innerheader %>
      <div class="container">
        <div class="row">
          <form action="/profile/edit/<%=editUser.id%>" method="post">
            <h2>Edit Profile <%= editUser.username.toUpperCase() %></h2>
            <input type="text" name="name" value="<%=editUser.name%>"><br>
            <input type="text" name="address" value="<%=editUser.address%>"><br>
            <input type="text" name="phone" value="<%=editUser.phone%>"><br>
            <input type="text" name="email" value="<%=editUser.email%>"><br>
            <button type="submit" class="btn waves-effect waves-light grey" name="submit">Submit</button>
          </form>
        </div>

      </div>
  </body>

</html>
