<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>Cars</title>
    <%- include layout/materialize %>
  </head>

  <body>
    <%- include layout/innerheader %>
      <br><br><br>
      <% dataMobil.Car.forEach(mobil => { %>


        <div class="row">
          <div class="col s4">
            <img class="materialboxed" data-caption="<%= mobil.Car.brand - mobil.Car.type %>" width="500" src="<%= mobil.Car.link_gambar %>">
            <form class="col s12" action="/cars" method="post">
              <div class="input-field inline">
                <input type="text" class="validate">
                <label>Uang Muka</label>
                <select name="bulan" class="browser-default">
                   <option value="" disabled selected>Choose your option</option>
                   <option value="6">6 Bulan</option>
                   <option value="12">12 Bulan</option>
                   <option value="18">18 Bulan</option>
                   <option value="24">24 Bulan</option>
                 </select>
              </div>
              <button type="submit" class="btn waves-effect waves-light grey" name="submit">Buy</button>
            </form>
          </div>
          <%})%>
  </body>

</html>
