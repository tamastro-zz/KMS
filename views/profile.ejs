<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>Profile</title>
    <%- include layout/materialize %>
      <style>
        p {
          padding-right: 1.8em
        }
      </style>
  </head>

  <body>
    <%- include layout/innerheader %>
      <br><br>
      <br>
      <div class="container">
        <div class="col s6 #e91e63 pink" align=center>
          <h1 class="z-depth-5"><%= dataUser.username.toUpperCase() %></h1>
        </div>
        <a href="/profile/edit/<%= dataUser.id %>" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">edit</i></a> | <a href="/profile/editpassword/<%=dataUser.id%>">Edit Password</a>
        <p class="flow-text"><b>Nama User :</b>
          <%= dataUser.name %><br>
            <b>Alamat User :</b>
            <%= dataUser.address %><br>
              <b>Telfon User :</b>
              <%= dataUser.phone %><br>
                <b>Email User :</b>
                <%= dataUser.email %><br>
        </p>
        <table class="responsive-table">
          <tr>
            <th>Mobil</th>
            <th>Price</th>
            <th>DP</th>
            <th>Durasi cicilan</th>
            <th>Cicilan /bulan</th>
            <th>Hutang</th>
            <th>Status</th>
          </tr>
          <% dataMobil.forEach(data => {%>
            <% if(data.status === true) {%>
              <tr bgcolor="#a5d6a7">
                <% } else { %>
                  <tr class="z-depth-5">
                    <% } %>
                      <td>
                        <%= data.Car.brand %> -
                          <%= data.Car.type %>
                      </td>
                      <td>
                        <%=data.Car.price.toLocaleString('en-IN', {style: 'currency', currency: 'EUR'})%>
                      </td>
                      <td>
                        <%=data.uangMuka.toLocaleString('en-IN', {style: 'currency', currency: 'EUR'})%>
                      </td>
                      <td>
                        <%= data.cicilan %>
                      </td>
                      <td>
                        <%=data.sisaBulan.toLocaleString('en-IN', {style: 'currency', currency: 'EUR'})%>
                      </td>
                      <td>
                        <%=data.hutang.toLocaleString('en-IN', {style: 'currency', currency: 'EUR'})%>
                      </td>
                      <td>
                        <%if(data.status == true) {%>
                          <p>
                            <font color="green">LUNAS</font>
                          </p>
                          <% } else {%>
                            <p>
                              <font color="red">BELUM LUNAS</font>
                            </p>
                            <%}%>
                      </td>
                  </tr>
                  <%})%>
        </table>
      </div>
  </body>

</html>
